import numpy as np
def k_fold_cross_validation(X: np.ndarray, y: np.ndarray, k=5, shuffle=True, seed=42):
    """
    Implement k-fold cross-validation by returning train-test splits.
    """
    n = len(X)
    
    if shuffle:
        np.random.shuffle(X)  
        np.random.shuffle(y)
    
    window = n // k
    result = []
    iteration = 0
    
    for i in range(k):
        temp_test = list(X[iteration:iteration+window])
        temp_train = list(X)
        for j in temp_test:
            temp_train.remove(j)
        
        result.append((temp_train, temp_test))
        iteration += window
    
    return result
